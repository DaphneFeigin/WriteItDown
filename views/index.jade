extends layout

block head-javascripts
  script(src='/javascripts/monkeys.js')

block content
  div.tasklist-div
    div(style='text-align: left')
      h2 This is my list!
    form
      | New Task
      input.input-element(type='text', name='newTask')
      input.input-element(type='submit', value='Submit')
    form(action='delete', method='get')
      each task in taskList
        br
        input(type='checkbox', name="#{task.id}")
        | #{task.name}
      br
      br
      input.input-element(type='submit', value='Delete')
  
  
      

