extends layout

block content
  div.tasklist-div
    div(style='text-align: left')
      h2 This is my list!
    form
      br
      input(type='checkbox')
      | Trader Joes
      br
      input(type='checkbox')
      | Target
      br
      input(type='checkbox')
      | Laundry
      br
      input(type='checkbox')
      | Hook the garage up to the internet
      br
      if newTask
        input(type='checkbox')
        | #{newTask}
      br
      br
      | New Task
      input.input-element(type='text', name='newTask')
      input.input-element(type='submit', value='Submit')
  
  
      

